<% layout("/layouts/boilerplate") %>

<body>
  <main class="d-flex flex-column justify-content-center min-vh-100">
    <h3 class="my-4"><%= listing.title %></h3>
    <div class="card mb-4 custom-card col-12 col-md-8">
      <img src="<%= listing.image.url %>" class="card-img-top img-fluid" alt="listing_image" style="height: 20rem; object-fit: cover; cursor: pointer;" data-bs-toggle="modal" data-bs-target="#imageModal" />
      <div class="card-body">
        <p class="card-text mb-2"><%= listing.description %></p>
        <p class="card-text mb-2">
          <% if (listing.price != null) { %>
            &#8377;<%= listing.price.toLocaleString("en-IN") %>
          <% } else { %>
            Price not available
          <% } %>
        </p>
        <p class="card-text mb-2"><%= listing.location %></p>
        <p class="card-text mb-4"><%= listing.country %></p>
      </div>
    </div>

    <div class="mb-4">
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
        <button class="btn btn-danger">Delete</button>
      </form>
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit</a>
    </div>

    <div>
      <hr>
      <h3>Leave a Review</h3>
      <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea id="comment" name="review[comment]" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comment for feedback</div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
    </div>
    
    <hr>
    <div class="mb-4">
      <h4>All Reviews</h4>
      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="col-12 col-md-6 mb-3">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= review.username %></h5>
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <p class="mb-1"><%= review.comment %></p>
                  <div class="star-rating">
                    <% for (let i = 1; i <= 5; i++) { %>
                      <% if (i <= review.rating) { %>
                        <i class="fas fa-star text-warning"></i>
                      <% } else { %>
                        <i class="far fa-star text-warning"></i>
                      <% } %>
                    <% } %>
                  </div>
                </div>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="d-inline">
                  <button class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    
  </main>

  <!-- Modal for full-screen image -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="imageModalLabel">Image Preview</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <img src="<%= listing.image.url %>" class="img-fluid" alt="listing_image" />
        </div>
      </div>
    </div>
  </div>
</body>
